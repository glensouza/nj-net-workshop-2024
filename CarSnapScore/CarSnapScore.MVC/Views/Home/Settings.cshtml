@model List<CarSnapScore.MVC.Models.CarModel>
@{
    this.ViewData["Title"] = "Settings";
}

<div class="text-center">
    <h1 class="display-4">Settings:</h1>
    
    @if (this.Model.Count == 0)
    {
        <form asp-controller="Home" asp-action="Settings" method="post">
            <button type="submit" class="btn btn-primary">Generate 5 Cars</button>
        </form>
    }
    else
    {
        <div class="form-group">
            <!-- display two images side by side -->
            <div class="row">
                @foreach (CarModel car in this.Model.OrderBy(s => s.CarName))
                {
                    <div class="col-md-2">
                        <h4>@car.CarName</h4>
                        <img src="@car.CarImage" class="car" alt="@car.CarName Car Image" />
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    img.car {
        height: 90%;
        width: 100%;
        object-fit: contain;
    }

    .col-md-2 {
        margin-top: 25px;
    }

    h4 {
        margin-botton: 0;
    }
</style>